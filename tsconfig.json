{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~/*": ["./src/*"],
      "dto/*": ["./src/dto/*"],
      "entity/*": ["./src/entity/*"],
      "pipe/*": ["./src/pipe/*"],
      "interceptor/*": ["./src/interceptor/*"]
    }
  }
}
